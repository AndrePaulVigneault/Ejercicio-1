@model WebPersonasMascotas.ViewModels.MascotaViewModel.EditViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h2 class="title">Editar Persona</h2>
    <form asp-action="Edit" asp-controller="Mascota" method="post">
        <div>
            <label asp-for="Id" hidden></label>
            <div>
                <input asp-for="Id" value="@Model.Id" class="lbl-block spaces" hidden />
                <span asp-validation-for="Id"></span>
            </div>
        </div>
        <div>
            <label asp-for="Nombre"></label>
            <div>
                <input asp-for="Nombre" value="@Model.Nombre" class="lbl-block spaces" required />
                <span asp-validation-for="Nombre"></span>
            </div>
        </div>
        <div>
            <label asp-for="Raza"></label>
            <div>
                <input asp-for="Raza"  required />
                <span asp-validation-for="Raza"></span>
            </div>
        </div>
        <div>
            <input type="submit" value="Editar" class="btn btn-primary btn-md btn-submit" />
        </div>
    </form>
</body>

</html>
